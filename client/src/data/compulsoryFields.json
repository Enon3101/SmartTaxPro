{
  "salary": {
    "fields": [
      {
        "id": "employerName",
        "label": "Employer Name",
        "type": "text",
        "validation": {
          "required": true,
          "minLength": 2
        }
      },
      {
        "id": "panOfEmployer",
        "label": "PAN of Employer",
        "type": "text",
        "validation": {
          "required": false,
          "minLength": 10
        }
      },
      {
        "id": "grossSalary",
        "label": "Gross Salary (₹)",
        "type": "number",
        "validation": {
          "required": true,
          "min": 0
        }
      },
      {
        "id": "exemptions",
        "label": "Section 10 Exemptions (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        }
      },
      {
        "id": "professionalTax",
        "label": "Professional Tax Paid (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        }
      },
      {
        "id": "tdsDeducted",
        "label": "TDS Deducted (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        }
      }
    ],
    "description": "Enter details of your salary income for the financial year 2024-25. Include income from all employers if you had multiple employers during the year."
  },
  "business": {
    "fields": [
      {
        "id": "businessName",
        "label": "Business/Profession Name",
        "type": "text",
        "validation": {
          "required": true,
          "minLength": 3
        }
      },
      {
        "id": "businessType",
        "label": "Type of Business",
        "type": "select",
        "options": [
          {
            "value": "retail",
            "label": "Retail Trade"
          },
          {
            "value": "wholesale",
            "label": "Wholesale Trade"
          },
          {
            "value": "manufacturing",
            "label": "Manufacturing"
          },
          {
            "value": "services",
            "label": "Services"
          },
          {
            "value": "profession",
            "label": "Professional Services"
          },
          {
            "value": "other",
            "label": "Other"
          }
        ],
        "validation": {
          "required": true
        }
      },
      {
        "id": "presumptiveTaxation",
        "label": "Do you want to opt for Presumptive Taxation?",
        "type": "select",
        "options": [
          {
            "value": "yes",
            "label": "Yes"
          },
          {
            "value": "no",
            "label": "No"
          }
        ],
        "validation": {
          "required": true
        }
      },
      {
        "id": "presumptiveSection",
        "label": "Applicable Presumptive Section",
        "type": "select",
        "options": [
          {
            "value": "44AD",
            "label": "44AD - Business"
          },
          {
            "value": "44ADA",
            "label": "44ADA - Profession"
          },
          {
            "value": "44AE",
            "label": "44AE - Goods Transport"
          }
        ],
        "validation": {
          "required": true
        },
        "showWhen": {
          "field": "presumptiveTaxation",
          "equals": ["yes"]
        }
      },
      {
        "id": "grossReceipts",
        "label": "Gross Turnover/Receipts (₹)",
        "type": "number",
        "validation": {
          "required": true,
          "min": 0
        }
      },
      {
        "id": "grossProfit",
        "label": "Gross Profit (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        },
        "showWhen": {
          "field": "presumptiveTaxation",
          "equals": ["no"]
        }
      },
      {
        "id": "netProfit",
        "label": "Net Profit (₹)",
        "type": "number",
        "validation": {
          "required": true,
          "min": 0
        }
      }
    ],
    "description": "Enter details about your business or professional income. If you have multiple businesses, you will need to add each one separately."
  },
  "house_property": {
    "fields": [
      {
        "id": "propertyType",
        "label": "Type of Property",
        "type": "select",
        "options": [
          {
            "value": "self_occupied",
            "label": "Self Occupied"
          },
          {
            "value": "let_out",
            "label": "Let Out"
          },
          {
            "value": "deemed_let_out",
            "label": "Deemed Let Out"
          }
        ],
        "validation": {
          "required": true
        }
      },
      {
        "id": "address",
        "label": "Property Address",
        "type": "textarea",
        "validation": {
          "required": true,
          "minLength": 10
        }
      },
      {
        "id": "annualValue",
        "label": "Annual Value/Rent Received (₹)",
        "type": "number",
        "validation": {
          "required": true,
          "min": 0
        },
        "showWhen": {
          "field": "propertyType",
          "equals": ["let_out", "deemed_let_out"]
        }
      },
      {
        "id": "municipalTaxes",
        "label": "Municipal Taxes Paid (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        }
      },
      {
        "id": "interestOnLoan",
        "label": "Interest on Housing Loan (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        }
      },
      {
        "id": "loanTakenDate",
        "label": "Date of Loan (if applicable)",
        "type": "date",
        "validation": {
          "required": false
        }
      }
    ],
    "description": "Enter details about your house property income. For self-occupied properties, only loan interest is deductible (up to ₹2 lakhs). For let-out properties, municipal taxes and standard deduction of 30% are allowed."
  },
  "capital_gains": {
    "fields": [
      {
        "id": "assetType",
        "label": "Type of Asset",
        "type": "select",
        "options": [
          {
            "value": "equity_shares",
            "label": "Equity Shares/Mutual Funds"
          },
          {
            "value": "property",
            "label": "Real Estate Property"
          },
          {
            "value": "gold",
            "label": "Gold/Jewellery"
          },
          {
            "value": "bonds",
            "label": "Bonds/Debentures"
          },
          {
            "value": "other",
            "label": "Other Capital Asset"
          }
        ],
        "validation": {
          "required": true
        }
      },
      {
        "id": "shortOrLong",
        "label": "Short-term or Long-term",
        "type": "select",
        "options": [
          {
            "value": "short",
            "label": "Short-term Capital Gain"
          },
          {
            "value": "long",
            "label": "Long-term Capital Gain"
          }
        ],
        "validation": {
          "required": true
        }
      },
      {
        "id": "saleValue",
        "label": "Full Value of Consideration (Sale Price) (₹)",
        "type": "number",
        "validation": {
          "required": true,
          "min": 0
        }
      },
      {
        "id": "acquisitionCost",
        "label": "Cost of Acquisition (Purchase Price) (₹)",
        "type": "number",
        "validation": {
          "required": true,
          "min": 0
        }
      },
      {
        "id": "acquisitionDate",
        "label": "Date of Acquisition",
        "type": "date",
        "validation": {
          "required": true
        }
      },
      {
        "id": "saleDate",
        "label": "Date of Sale",
        "type": "date",
        "validation": {
          "required": true
        }
      },
      {
        "id": "improvementCost",
        "label": "Cost of Improvement (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        }
      },
      {
        "id": "exemptionAmount",
        "label": "Exemption Claimed (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        },
        "showWhen": {
          "field": "shortOrLong",
          "equals": ["long"]
        }
      },
      {
        "id": "exemptionSection",
        "label": "Exemption Under Section",
        "type": "select",
        "options": [
          {
            "value": "54",
            "label": "54 - Purchase of House"
          },
          {
            "value": "54B",
            "label": "54B - Agricultural Land"
          },
          {
            "value": "54EC",
            "label": "54EC - Specified Bonds"
          },
          {
            "value": "54F",
            "label": "54F - House (from other assets)"
          },
          {
            "value": "other",
            "label": "Other Section"
          }
        ],
        "validation": {
          "required": false
        },
        "showWhen": {
          "field": "exemptionAmount",
          "equals": ["long"]
        }
      }
    ],
    "description": "Enter details about your capital gains. Assets held for more than 24 months (36 months for property) are considered long-term. Different tax rates apply to short and long-term gains."
  },
  "interest": {
    "fields": [
      {
        "id": "interestType",
        "label": "Type of Interest Income",
        "type": "select",
        "options": [
          {
            "value": "savings",
            "label": "Savings Bank Account"
          },
          {
            "value": "fd",
            "label": "Fixed Deposit"
          },
          {
            "value": "recurring",
            "label": "Recurring Deposit"
          },
          {
            "value": "bonds",
            "label": "Bonds/Debentures"
          },
          {
            "value": "other",
            "label": "Other Interest"
          }
        ],
        "validation": {
          "required": true
        }
      },
      {
        "id": "bankName",
        "label": "Bank/Institution Name",
        "type": "text",
        "validation": {
          "required": true,
          "minLength": 3
        }
      },
      {
        "id": "interestAmount",
        "label": "Interest Income (₹)",
        "type": "number",
        "validation": {
          "required": true,
          "min": 0
        }
      },
      {
        "id": "tdsDeducted",
        "label": "TDS Deducted (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        }
      }
    ],
    "description": "Enter details about your interest income from various sources. Remember that interest income from savings accounts up to ₹10,000 is exempt under section 80TTA."
  },
  "dividends": {
    "fields": [
      {
        "id": "companyName",
        "label": "Company/Mutual Fund Name",
        "type": "text",
        "validation": {
          "required": true,
          "minLength": 3
        }
      },
      {
        "id": "dividendAmount",
        "label": "Dividend Amount (₹)",
        "type": "number",
        "validation": {
          "required": true,
          "min": 0
        }
      },
      {
        "id": "tdsDeducted",
        "label": "TDS Deducted (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        }
      },
      {
        "id": "dateReceived",
        "label": "Date Received",
        "type": "date",
        "validation": {
          "required": false
        }
      }
    ],
    "description": "Enter details about dividends received from domestic companies or mutual funds. All dividends are now taxable at your slab rate."
  },
  "other_sources": {
    "fields": [
      {
        "id": "incomeType",
        "label": "Type of Income",
        "type": "select",
        "options": [
          {
            "value": "commission",
            "label": "Commission Income"
          },
          {
            "value": "lottery",
            "label": "Lottery/Gambling Winnings"
          },
          {
            "value": "gifts",
            "label": "Gifts Received"
          },
          {
            "value": "pension",
            "label": "Family Pension"
          },
          {
            "value": "other",
            "label": "Other Income"
          }
        ],
        "validation": {
          "required": true
        }
      },
      {
        "id": "description",
        "label": "Description of Income",
        "type": "textarea",
        "validation": {
          "required": true,
          "minLength": 5
        }
      },
      {
        "id": "amount",
        "label": "Amount (₹)",
        "type": "number",
        "validation": {
          "required": true,
          "min": 0
        }
      },
      {
        "id": "tdsDeducted",
        "label": "TDS Deducted (₹)",
        "type": "number",
        "validation": {
          "required": false,
          "min": 0
        }
      }
    ],
    "description": "Enter details about any other income not covered in the previous sections. This could include family pension, commission, lottery winnings, gifts received, etc."
  }
}