{
  "rules": [
    {
      "form": "ITR-1",
      "description": "ITR-1 (Sahaj) is for Individuals being a Resident (other than Not Ordinarily Resident) having Total Income up to ₹50 lakhs, having Income from Salaries, One House Property, Income from Other Sources (Interest etc.), and Agricultural Income up to ₹5,000.",
      "conditions": {
        "allowedSources": ["salary", "house_property", "interest", "dividends", "other_sources"],
        "disallowedSources": ["business", "capital_gains"],
        "maxIncome": 5000000,
        "maxAgricultural": 5000,
        "selfOccupiedOnly": true,
        "presumptiveIncome": false,
        "foreignIncome": false,
        "broughtForwardLosses": false,
        "capitalGains": false,
        "residentStatus": "resident"
      }
    },
    {
      "form": "ITR-2",
      "description": "ITR-2 is for Individuals and HUFs not having income from profits and gains of business or profession. It covers income from salaries, house property, capital gains, and other sources.",
      "conditions": {
        "allowedSources": ["salary", "house_property", "capital_gains", "interest", "dividends", "other_sources"],
        "disallowedSources": ["business"],
        "presumptiveIncome": false,
        "capitalGains": true
      }
    },
    {
      "form": "ITR-3",
      "description": "ITR-3 is for Individuals and HUFs having income from profits and gains of business or profession. It includes all income sources including business income.",
      "conditions": {
        "allowedSources": ["salary", "house_property", "business", "capital_gains", "interest", "dividends", "other_sources"],
        "disallowedSources": []
      }
    },
    {
      "form": "ITR-4",
      "description": "ITR-4 (Sugam) is for Individuals, HUFs and Firms (other than LLP) being a Resident having Total Income up to ₹50 lakhs and having income from Business and Profession which is computed under presumptive income scheme.",
      "conditions": {
        "allowedSources": ["salary", "house_property", "business", "interest", "dividends", "other_sources"],
        "disallowedSources": ["capital_gains"],
        "maxIncome": 5000000,
        "presumptiveIncome": true,
        "presumptiveSections": ["44AD", "44ADA", "44AE"],
        "capitalGains": false,
        "foreignIncome": false,
        "residentStatus": "resident"
      }
    }
  ],
  "incomeSources": [
