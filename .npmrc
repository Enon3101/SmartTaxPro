# Skip optional dependencies to avoid platform-specific binary issues
optional=false
omit=optional

# Use npm's legacy peer deps resolution
legacy-peer-deps=true

# Disable platform-specific binaries for Rollup only
rollup_platform=linux
rollup_arch=x64

# Force npm to ignore optional dependencies completely
fund=false
audit=false

# Allow esbuild platform-specific binaries
include=prod

# Prevent installation of problematic platform-specific binaries
ignore-scripts=false
ignore-engines=true 