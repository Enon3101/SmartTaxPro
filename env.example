# Environment variables for SmartTaxPro (example)
# Copy this file to `.env` and adjust values locally or in CI/CD secrets.

# ─── Database ──────────────────────────────────────────────
POSTGRES_USER=smarttaxpro
POSTGRES_PASSWORD=supersecretpassword
POSTGRES_DB=smarttaxpro
DATABASE_URL=postgres://smarttaxpro:supersecretpassword@postgres:5432/smarttaxpro

# ─── Node Environment ─────────────────────────────────────
NODE_ENV=development
PORT=5000

# ─── File Storage ─────────────────────────────────────────
FILE_STORAGE_PROVIDER=LOCAL   # LOCAL | AWS_S3 | GOOGLE_CLOUD
FILE_ACCESS_SECRET=change_this_secret
UPLOAD_DIR=/uploads

# ─── AWS S3 (optional) ────────────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_S3_BUCKET=smarttaxpro-files

# ─── Other Secrets ────────────────────────────────────────
JWT_SECRET=another_super_secret 