# Environment variables for SmartTaxPro (example)
# Copy this file to `.env` and adjust values locally or in CI/CD secrets.

# ─── Database ──────────────────────────────────────────────
POSTGRES_USER=smarttaxpro
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD_GENERATED_WITH_OPENSSL_RAND_HEX_32
POSTGRES_DB=smarttaxpro
DATABASE_URL=postgres://smarttaxpro:CHANGE_THIS_TO_SECURE_PASSWORD_GENERATED_WITH_OPENSSL_RAND_HEX_32@postgres:5432/smarttaxpro

# ─── Node Environment ─────────────────────────────────────
NODE_ENV=development
PORT=5000

# ─── File Storage ─────────────────────────────────────────
FILE_STORAGE_PROVIDER=LOCAL   # LOCAL | AWS_S3 | GOOGLE_CLOUD
FILE_ACCESS_SECRET=CHANGE_THIS_TO_SECURE_SECRET_GENERATED_WITH_OPENSSL_RAND_HEX_32
UPLOAD_DIR=/uploads

# ─── AWS S3 (optional) ────────────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_S3_BUCKET=smarttaxpro-files

# ─── MinIO (optional) ──────────────────────────────────────
MINIO_ROOT_USER=CHANGE_THIS_TO_SECURE_MINIO_USER
MINIO_ROOT_PASSWORD=CHANGE_THIS_TO_SECURE_MINIO_PASSWORD_GENERATED_WITH_OPENSSL_RAND_HEX_32

# ─── Other Secrets ────────────────────────────────────────
JWT_SECRET=CHANGE_THIS_TO_SECURE_JWT_SECRET_GENERATED_WITH_OPENSSL_RAND_HEX_64
ADMIN_SETUP_TOKEN=CHANGE_THIS_TO_SECURE_ADMIN_TOKEN_GENERATED_WITH_OPENSSL_RAND_HEX_16 